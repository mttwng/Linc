<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:text="Settings"
        android:id="@+id/settingsButton"
        android:layout_alignParentEnd="true"
        android:width="160dp"
        android:layout_marginTop="0dp"
        android:background="@android:color/transparent"
        android:gravity="bottom|center_horizontal|right"
        android:paddingBottom="5dp"
        android:layout_height="30dp"
        android:paddingRight="10dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:text="Linced"
        android:id="@+id/lincToButton"
        android:layout_alignBottom="@+id/settingsButton"
        android:layout_toStartOf="@+id/settingsButton"
        android:width="100dp"
        android:background="@android:color/transparent"
        android:gravity="bottom|center_horizontal"
        android:paddingBottom="5dp"
        android:layout_height="30dp"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:text="Discover"
        android:id="@+id/findButton"
        android:layout_alignBottom="@+id/lincToButton"
        android:layout_toStartOf="@+id/lincToButton"
        android:width="100dp"
        android:background="@android:color/transparent"
        android:gravity="bottom|center_horizontal"
        android:paddingBottom="5dp"
        android:layout_height="30dp"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="29dp"
        android:id="@+id/upperBG"
        android:background="#2C3E50"
        android:layout_alignParentTop="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:layout_marginTop="29dp"
        android:width="100dp"
        android:id="@+id/discoverUnderline"
        android:layout_alignBottom="@+id/lincedUnderline"
        android:layout_toStartOf="@+id/lincedUnderline"
        android:layout_alignParentTop="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:layout_marginTop="29dp"
        android:width="100dp"
        android:id="@+id/lincedUnderline"
        android:layout_alignBottom="@+id/underlineMap"
        android:layout_toStartOf="@+id/underlineMap"
        android:layout_alignParentTop="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="5dp"
        android:layout_marginTop="29dp"
        android:width="160dp"
        android:id="@+id/underlineMap"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true" />

    <ListView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toggleView"
        android:layout_alignParentEnd="true"
        android:gravity="center_vertical"
        android:layout_marginTop="33dp"
        android:paddingRight="12dp"
        android:paddingLeft="12dp"
        tools:listitem="@android:layout/toggle_item"
        android:background="#FF0c1e30"
        android:textColor="#ffffff"
        />

    <ListView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/listView"
        android:layout_alignParentEnd="true"
        android:gravity="center_vertical"
        android:layout_marginTop="85dp"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="12dp"
        android:layout_alignParentTop="true"
        tools:listitem="@android:layout/list_item" />


</RelativeLayout>